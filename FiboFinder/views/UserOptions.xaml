<Window x:Class="FiboFinder.views.UserOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FiboFinder.views"
        mc:Ignorable="d"
        Title="Настройки пользователя" Height="480" Width="300">
    <StackPanel>
        <StackPanel>
            <Grid ShowGridLines="False" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Content="Номер клиента: " Grid.Row="0" Grid.Column="0" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
                <TextBox x:Name="clientCodeTxt" Grid.Row="0" Grid.Column="1"  FontSize="16" MaxLength="6" Text=""  PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Center" Padding="5,5,0,0" Margin="0,0,5,0" BorderBrush="AliceBlue" Width="145"/>
            </Grid>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Margin="0,20,10,0">
            <Button x:Name="sendEmailButton" Grid.Row="1" 
                Style="{StaticResource MaterialDesignRaisedAccentButton}" Grid.Column="1" Content="Сохранить" 
                    IsEnabled="True" HorizontalAlignment="Left" Margin="10,0,0,0"  VerticalAlignment="Top" 
                    Click="saveSettings_click" Width="147" Height="30" BorderBrush="AliceBlue" BorderThickness="1"/>
        </StackPanel>
    </StackPanel>
</Window>
